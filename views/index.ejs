<div class="row">
  <div class="wide column">
    <div class="header ui">
    <i class="disabled browser icon"></i>
      <div class="content">
         Issues: <span>
            <a href="#" class="section">area</a>
            <span class="divider">/</span>
            <a href="#" class="section">linea</a>
          </span>
          <div class="ui checkbox">
            <input type="checkbox" id="fun" checked="{{editing}}">
            <label for="fun">Reportar incidente</label>
          </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
{{#unless editing}}
  <div class="wide column ">
    <h4 class="ui top attached header">Incidentes</h4>
    <div class="ui divided list attached segment">
      
      {{#if destroyed}}
        <div class="item" href="#!show/incidentes/{{id}}">
          <div class="right floated compact ui button mini" on-click="dismissDestroyed"><i class="remove icon"></i></div>
          <i class="red circle help icon"></i>
          <div class="content">
            <div class="header">{{destroyed.previous.title}}</div>
            <div class="description">Incident Closed:  #{{destroyed.previous.id}} abierto {{destroyed.previous.createdAt}} por {{destroyed.previous.responsible}}</div>
          </div>
        </div>
      {{/if destroyed}}

      {{#each incident}}
      <div class="item">
        <i class=" help icon"></i>
        <div class="content">
          <div class="header"><a href="#" on-click="destoyItem">{{title}}</a></div>
          <div class="description">#{{id}} abierto {{createdAt}} por {{responsible}}</div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
{{/unless}}
{{#if editing}}
  <div class="wide column">
    <form on-submit="reportIncident" class="ui small form segment">
      <div class="field required "><label for="">Titulo</label><input type="text" value="{{newComment.title}}"></div>
      <div class="inline fields">
        <label for="">Area</label>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.area}}" id="osas" value="osas"><label for="osas">OSAS</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.area}}" id="pruebas" value="pruebas"><label for="shim">Pruebas</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.area}}" id="shim" value="shim"><label for="shim">Shim</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.area}}" id="paquetes" value="paquetes"><label for="paquetes">Packetes</label></div>
        </div>
      </div>
      <div class="inline fields">
        <label for="">Turno</label>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.shift}}" id="shift1" value="1"><label for="shift1">1ro</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.shift}}" id="shift2" value="2"><label for="shift2">2do</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.shift}}" id="shift3" value="3"><label for="shift3">3ro</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.shift}}" id="shift4" value="4"><label for="shift4">4to</label></div>
        </div>
        <div class="field">
          <div class="ui radio checkbox"><input type="radio" name="{{newComment.shift}}" id="shift5" value="5"><label for="shift5">5to</label></div>
        </div>
      </div>
      <div class="two fields ">
        <div class="field">
          <label for="">Comentario</label><textarea name="" id="" value="{{newComment.description}}"></textarea>
        </div>
        <div class="field"><label for="">Resultado</label>
          <div class="ui segment">{{{marked(newComment.description)}}}</div>
        </div>
      </div>
      <button type="submit" class="ui primary button">Reportar nuevo incidente</button>
    </form>
  </div>
{{/if}}

</div>